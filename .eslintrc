{
    "parser": "babel-eslint",
    "extends": ["standard", "plugin:react/recommended"],
    "rules": {
        "indent": [0, 4],
        "react/react-in-jsx-scope": 0,
        "react/prop-types": 0,
        "react/display-name": 0,
        "space-before-function-paren": 0,
        "quotes": ["off", "single"],
        "semi": [2, "always"],
        "no-undef": 0,
        "eqeqeq": 0,
        "lines-between-class-members": 0,
        "no-useless-escape": 0
    },
    "settings": {
        "react": {
            "version": "16.0.4"
        }
    },
    "globals": {
        "localStorage": true,
        "fetch": true,
        "test": true,
        "expect": true
    }
}
